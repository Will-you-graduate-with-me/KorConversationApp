<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ffffff">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginVertical="15dp"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:background="#00ff0000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_btn" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/p1"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="10dp"
        app:cardElevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:text="어떤 음식을 좋아해요?"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_speak"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:src="@drawable/speaker2"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="#00ff0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageButton>

            <TextView
                android:id="@+id/eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:text="What kind of food do you like?"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kor" />

            <ImageButton
                android:id="@+id/btn_restart"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="74dp"
                android:src="@drawable/restart"
                android:background="#00ff0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_grade" />

            <ImageButton
                android:id="@+id/btn_grade"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="74dp"
                android:src="@drawable/a"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_check" />

            <ImageButton
                android:id="@+id/btn_check"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="74dp"
                android:src="@drawable/check"
                android:background="#00ff0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn_repeat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_login"
                android:text="Repeat After"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>